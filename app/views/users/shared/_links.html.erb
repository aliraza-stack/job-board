<%- if controller_name != 'sessions' && links.include?("login") %>
  <%= link_to "Login", new_session_path(resource_name), class: "font-medium text-blue-600 transition-all duration-200 hover:text-blue-700 hover:underline focus:text-blue-700" %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' && links.include?("signup") %>
  <%= link_to "Create an account", new_registration_path(resource_name), class: "font-medium text-blue-600 transition-all duration-200 hover:text-blue-700 focus:text-blue-700 hover:underline" %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' && links.include?("forgot") %>
  <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm font-medium text-primary-600 hover:underline dark:text-primary-500" %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations'  && links.include?("confirm") %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'  && links.include?("unlock") %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
  <% end %>
<% end %>
