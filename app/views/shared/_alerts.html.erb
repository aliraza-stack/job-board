<% flash.each do |type, message| %>
  <% if message != "hide" %>
    <div
      role="alert"
      class="transition transform duration-1000 absolute top-5 w-full max-w-md right-5 z-50 alert shadow-lg <%= type == "notice" ? "alert-info" : "alert-error" %>"
      data-controller="notifications"
      data-notification-delay-value="10000"
      data-notification-hidden-value="true"
      data-transition-enter-from="opacity-0 translate-x-6"
      data-transition-enter-to="opacity-100 translate-x-0"
      data-transition-leave-from="opacity-100 translate-x-0"
      data-transition-leave-to="opacity-0 translate-x-6"
    >
      <% if type == "alert" %>
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      <% else %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      <% end %>
        <div>
          <h3 class="font-bold text-lg"><%= type.upcase %>!</h3>
          <div class="text-md"><%= message %></div>
        </div>
        <button class="btn btn-sm" data-action="notifications#hide">X</button>
    </div>
  <% end %>
<% end %>


