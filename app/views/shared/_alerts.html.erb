<% flash.each do |type, message| %>
  <% if message != "hide" %>
    <div
      role="alert"
      class="z-50 transition transform duration-1000 fixed top-5 right-5 border border-gray-200 rounded-lg shadow-lg bg-white min-w-96"
      data-controller="notifications"
      data-notification-delay-value="10000"
      data-notification-hidden-value="true"
      data-transition-enter-from="opacity-0 translate-x-6"
      data-transition-enter-to="opacity-100 translate-x-0"
      data-transition-leave-from="opacity-100 translate-x-0"
      data-transition-leave-to="opacity-0 translate-x-6"
    >
      <button class="absolute p-1 bg-gray-100 border border-gray-300 rounded-full -top-1 -right-1" data-action="notifications#hide">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
      </button>

      <div class="flex items-center p-4">
        <% if type == "alert" %>

          <div
            class="inline-flex items-center justify-center flex-shrink-0 object-cover w-12 h-12 text-red-500 bg-red-100 rounded-lg">
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                 viewBox="0 0 20 20">
              <path
                d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 11.793a1 1 0 1 1-1.414 1.414L10 11.414l-2.293 2.293a1 1 0 0 1-1.414-1.414L8.586 10 6.293 7.707a1 1 0 0 1 1.414-1.414L10 8.586l2.293-2.293a1 1 0 0 1 1.414 1.414L11.414 10l2.293 2.293Z" />
            </svg>
            <span class="sr-only">Error icon</span>
          </div>

        <% else %>
          <div
            class="inline-flex items-center justify-center flex-shrink-0 object-cover w-12 h-12 text-green-500 bg-green-100 rounded-lg">
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                 viewBox="0 0 20 20">
              <path
                d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z" />
            </svg>
            <span class="sr-only">Check icon</span>
          </div>
        <% end %>


        <div class="ml-3 overflow-hidden">
          <p class="font-bold text-gray-900"><%= type.capitalize %></p>
          <p class="max-w-xs text-sm text-gray-500">
            <%= message %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
